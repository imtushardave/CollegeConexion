<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/grey_border_bottom"
    android:paddingBottom="3dp"
    android:layout_marginTop="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:weightSum="1">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile_image_block_list"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/student" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.90"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_profile_name_block_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:text="Tushar Dave"
                android:textColor="@color/darkBlueTheme"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_course_name_block_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:gravity="center_horizontal"
                android:text="B.Tech"
                android:textColor="@color/appBlueTheme"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/user_branch_name_block_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:gravity="center_horizontal"
                android:text="Computer Science Engineering"
                android:textColor="@color/appBlueTheme"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>