<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/post_CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2.5dp"
    android:layout_marginTop="2.5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:paddingBottom="10dp"
            android:background="@drawable/grey_border_bottom"
            android:id="@+id/college_data"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/notice_college_logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:background="@drawable/circle_background_happenings"
                android:src="@drawable/rtulogo" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/notice_college_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="University Teaching Department,\nRajasthan Technical University, Kota"
                android:textColor="@color/darkBlueTheme"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/appBlueTheme"
            android:text="Title"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/notice_heading"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/appBlueTheme"
            android:text="Heading"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:weightSum="2">
            <TextView
                android:id="@+id/notice_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="27/08/2014"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/notice_time"
                android:layout_marginRight="10dp"
                android:gravity="end"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9:30 PM"/>

        </LinearLayout>

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/notice_post_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/banner" />

        <TextView
            android:textIsSelectable="true"
            android:enabled="true"
            android:focusable="true"
            android:longClickable="true"
            android:paddingBottom="10dp"
            android:linksClickable="true"
            android:autoLink="web"
            android:textColorLink="@color/Black"
            android:background="@drawable/grey_border_bottom"
            android:id="@+id/notice_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="Notice Discription Will appear here"
            android:textColor="@color/appBlueTheme"
            android:textSize="16sp" />

        <LinearLayout
            android:gravity="end"
            android:id="@+id/postedBy_data"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posted By -"
                android:textColor="@color/appBlueTheme"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="12sp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/posted_by_profile_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/circle_background_happenings"
                android:src="@drawable/student" />

            <LinearLayout
                android:id="@+id/userData"
                android:gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/postedByName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile Name"
                    android:textColor="@color/darkBlueTheme"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/postedByRollNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Roll No."
                    android:textColor="@color/appBlueTheme"
                    android:textSize="12dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>