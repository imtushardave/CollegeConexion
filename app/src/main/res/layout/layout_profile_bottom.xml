<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <RelativeLayout
        android:paddingTop="20dp"
        android:layout_below="@+id/middleRelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/edit_profile_direct"
                android:layout_gravity="end"
                android:layout_marginRight="10dp"
                android:layout_width="30dp"
                android:padding="5dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_edit_blue"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">
                <ImageView
                    android:id="@+id/bioIcon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.15"
                    android:src="@drawable/ic_bio" />

                <LinearLayout
                    android:layout_weight="0.85"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/darkGrey"
                        android:text="Bio"/>
                    <TextView
                        android:id="@+id/bio"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:paddingLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/Black"
                        android:text="Update"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">
                <ImageView
                    android:id="@+id/courseIcon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.15"
                    android:src="@drawable/ic_degree" />

                <LinearLayout
                    android:layout_weight="0.85"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/course"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/darkGrey"
                        android:text="Add Your current Course"/>
                    <TextView
                        android:id="@+id/branch"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/Black"
                        android:text="Add Your Current Branch"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">
                <ImageView
                    android:id="@+id/rollnoIcon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.15"
                    android:src="@drawable/ic_rollno" />

                <LinearLayout
                    android:layout_weight="0.85"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/darkGrey"
                        android:text="Roll No"/>
                    <TextView
                        android:id="@+id/roll_no"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/Black"
                        android:text="Add Your Roll No "/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="0.5"
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/dobIcon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.30"
                    android:src="@drawable/ic_dob" />

                <LinearLayout
                    android:layout_weight="0.85"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/darkGrey"
                        android:text="Date of Birth"/>
                    <TextView
                        android:id="@+id/dob"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/Black"
                        android:text="Add your Date of birth "/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="0.5"
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/genderIcon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.30"
                    android:src="@drawable/ic_gender" />

                <LinearLayout
                    android:layout_weight="0.85"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/darkGrey"
                        android:text="Gender"/>
                    <TextView
                        android:id="@+id/gender"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/Black"
                        android:text="Add"/>
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:layout_gravity="center"
                android:src="@drawable/ic_phone"/>
                <LinearLayout
                    android:layout_weight="0.85"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/darkGrey"
                        android:text="Phone Number"/>
                    <TextView
                        android:id="@+id/phoneNumber"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/Black"
                        android:text="Add Phone Number"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.15"
                    android:src="@drawable/ic_email" />

                <LinearLayout
                    android:layout_weight="0.85"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/darkGrey"
                        android:text="Email Id"/>
                <TextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/Black"
                    android:text="Your Email"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</merge>