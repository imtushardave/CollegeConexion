<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/custom_bar_profile_picture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/student"
        android:layout_toLeftOf="@+id/custom_bar_menu"
       android:layout_marginTop="5dp"
        android:layout_marginRight="3dp"
        />
    <ImageView
        android:layout_marginLeft="10dp"
        android:id="@+id/custom_bar_back_arrow"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_back_arrow"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="13dp"
        />
    <ImageView
        android:layout_marginLeft="10dp"
        android:id="@+id/custom_bar_menu"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_menu_post_white"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="13dp"
        />

    <TextView
        android:id="@+id/custom_bar_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display Name"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/custom_bar_back_arrow"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="5dp"

        />

    <TextView
        android:id="@+id/custom_bar_last_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Seen"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/custom_bar_back_arrow"
        android:layout_below="@+id/custom_bar_display_name"
        android:layout_marginTop="2dp"
       />

</RelativeLayout>